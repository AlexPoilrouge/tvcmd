#! /usr/bin/env python

import sys, os
import logging
import argparse

def interactive():
    import readline
    import rlcompleter
    readline.parse_and_bind("tab: complete")
    
    import code
    print("\nLaunching python interactive shell ...\n")
    code.interact(local=globals())
    
def main():
    parser = argparse.ArgumentParser(description = "tvcmd command line tv episodes tracker")
    parser.add_argument("-t", "--torrent", action="store_true", help="print torrent urls and exit")
    
    args = parser.parse_args()
    
    import tvcmd.cli
    ui = tvcmd.cli.Cmd()
    ui.load()
    
    # print torrent urls and exit
    if args.torrent:
        ui.onecmd("tor *")
        return
    
    # main execution mode
    ui.cmdloop()
    
if __name__ == "__main__":
    
    # DEBUG mode
    if os.environ.get("DEBUG"):
        
        logging.basicConfig(level=logging.DEBUG)
        sys.path.insert(0, os.path.dirname(__file__)+"/..")
        
        import tvcmd.cons
        tvcmd.cons.CONFIGDIR = tvcmd.cons.CONFIGDIR+"_debug"
        
        import traceback
        try: main()
        except SystemExit: pass
        except: traceback.print_exc()
        
        interactive()
        
    # NORMAL mode
    else:
        
        logging.basicConfig(level=logging.INFO)
        main()
        sys.exit(0)
